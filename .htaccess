# تعيين نوع المحتوى لملفات PHP
AddType application/x-httpd-php .php
AddHandler application/x-httpd-php .php

# تعيين نوع المحتوى الافتراضي
DefaultType application/x-httpd-php

# تعيين ترميز UTF-8
AddDefaultCharset UTF-8

# تفعيل محرك إعادة الكتابة
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /eymtax/
    
    # إذا كان الملف أو المجلد غير موجود
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # توجيه جميع الطلبات إلى index.php
    RewriteRule ^(.*)$ index.php [L]
</IfModule>

# تعيين الصلاحيات
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# تعيين الصلاحيات للملفات
<FilesMatch "\.(php|html|htm)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# تعيين نوع MIME لملفات PHP
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
    AddType application/x-httpd-php-source .phps
</IfModule>

# تعيين معالج PHP
<IfModule mod_php.c>
    php_flag display_errors on
    php_value error_reporting E_ALL
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# تحسين الأداء
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# ضغط المحتوى
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# منع الوصول إلى الملفات الحساسة
<FilesMatch "^(config\.php|\.htaccess|\.git|\.env)">
    Order allow,deny
    Deny from all
</FilesMatch> 